<body>
{{ app.user }} <br>
{% if app.user is not null %}


    <nav class="navbar navbar-inverse navbar-fixed-top">
        <a href="{{ path('fos_user_profile_show') }}" class="pull-right"><img id="avatar" width=100px, height=65px,
                                                                                               src="/uploads/{{ app.user.picture }}"></a>

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('default') }}">Game Library</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <form class="navbar-form navbar-right">

                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-success">Wyloguj się</a>
                    <a href="{{ path('editProfile', {'username': app.user}) }}" class="btn btn-success">Edytuj
                        profila</a><br>
                </form>
            </div><!--/.navbar-collapse -->
        </div>
    </nav>
{% else %}

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('default') }}">Game Library</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <form class="navbar-form navbar-right" action="{{ path("fos_user_security_check") }}" method="post">


                    <div class="form-group">
                        <input type="text" placeholder="Username" id="username" name="_username" required="required"/>
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder="Password" id="password" name="_password"
                               required="required"/>
                    </div>

                    <input type="submit" id="_submit" name="_submit" class="btn btn-success" value="Zaloguj się"/>
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success">Register</a>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    <label for="remember_me" font color="red">zapamiętaj mnie</label>
                </form>
            </div><!--/.navbar-collapse -->
        </div>
    </nav>
{% endif %}


<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1 class="title">Welcome to the GameLibrary</h1>
        <p class="active">On this website you can add, rate and share your favourite games. Enjoy!</p>
        <p><a href="{{ path('game_index') }}" class="btn btn-primary btn-lg">Browse Games</a></p>

    </div>
</div>

</div>


<div class="page-header">
    <h1>Best Games</h1>
</div>

<div class="container">
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">

            {% for game in games %}

                <li data-target="#myCarousel" data-slide-to={{ game.id }}></li>

            {% endfor %}
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">

            </div>

            {% for game in games %}

                <div class="item">
                    <img src="uploads/{{ game.pic }}" width="460" height="345">
                </div>
            {% endfor %}

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


</div>

<hr>

<footer>
    <p>&copy; 2016 Wajda&Saletra</p>
</footer>
</div> <!-- /container -->


