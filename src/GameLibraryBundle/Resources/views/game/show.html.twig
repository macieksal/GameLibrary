{% extends 'GameLibraryBundle::base.html.twig' %}
{% block head %}

    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.9.0/css/lightbox.css" rel="stylesheet">
    #

{% endblock %}


{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>Producer</th>
                <td>{{ game.producer }}</td>
            </tr>
            <tr>
                <th>Premieredate</th>
                <td>{% if game.premiereDate %}{{ game.premiereDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ game.rating }}</td>
            </tr>
        <tr>
            <th>Picture</th>
            <td><a href="/{{ game.pic }}" data-lightbox="image-1" data-title={{ game.pic }}><img src="/{{ game.pic }}" width="150px" height="150px"></a>
            </td>
        </tr>
        </tbody>
    </table>


<p>
            <a href="{{ path('game_index') }}" class="btn btn-lg btn-default" id="back" style="float: right;">Back to the list</a>


            <a href="{{ path('game_edit', { 'id': game.id }) }}"class="btn btn-lg btn-info" id="edit">Edit</a>


            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-lg btn-danger">
            {{ form_end(delete_form) }}
    </p>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.9.0/js/lightbox-plus-jquery.min.js"></script>
{% endblock %}
